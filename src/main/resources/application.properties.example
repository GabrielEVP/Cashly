# ==========================================
# Cashly API Configuration
# ==========================================

# Application Configuration
spring.application.name=cashly-api
server.port=8080
server.servlet.context-path=/api/v1

# ==========================================
# Database Configuration
# ==========================================
spring.datasource.url=jdbc:mysql://localhost:3306/cashly_db?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
spring.datasource.username=cashly_user
spring.datasource.password=your_database_password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA/Hibernate Configuration
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.database-platform=org.hibernate.dialect.MySQLDialect
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.use_sql_comments=true

# ==========================================
# Flyway Migration Configuration
# ==========================================
spring.flyway.enabled=true
spring.flyway.baseline-on-migrate=true
spring.flyway.locations=classpath:db/migration
spring.flyway.table=schema_version

# ==========================================
# GoCardless Configuration
# ==========================================
gocardless.base-url=https://bankaccountdata.gocardless.com
gocardless.secret-id=your_gocardless_secret_id
gocardless.secret-key=your_gocardless_secret_key
gocardless.environment=sandbox
gocardless.webhook-endpoint=https://your-domain.com/api/v1/webhooks/gocardless

# ==========================================
# OAuth2 Client Configuration
# ==========================================
spring.security.oauth2.client.registration.gocardless.client-id=${gocardless.secret-id}
spring.security.oauth2.client.registration.gocardless.client-secret=${gocardless.secret-key}
spring.security.oauth2.client.registration.gocardless.authorization-grant-type=authorization_code
spring.security.oauth2.client.registration.gocardless.redirect-uri=http://localhost:8080/login/oauth2/code/gocardless
spring.security.oauth2.client.registration.gocardless.scope=read

spring.security.oauth2.client.provider.gocardless.authorization-uri=https://ob.gocardless.com/psd2/start
spring.security.oauth2.client.provider.gocardless.token-uri=https://ob.gocardless.com/psd2/token
spring.security.oauth2.client.provider.gocardless.user-info-uri=https://bankaccountdata.gocardless.com/api/v2/accounts/

# ==========================================
# Security Configuration
# ==========================================
spring.security.user.name=admin
spring.security.user.password=admin_password
spring.security.user.roles=ADMIN

# JWT Configuration
cashly.jwt.secret=your_jwt_secret_key_min_256_bits
cashly.jwt.expiration=86400000

# ==========================================
# OpenFeign Configuration
# ==========================================
feign.client.config.default.connect-timeout=5000
feign.client.config.default.read-timeout=10000
feign.client.config.default.logger-level=basic

# ==========================================
# Actuator Configuration
# ==========================================
management.endpoints.web.exposure.include=health,info,metrics,prometheus
management.endpoint.health.show-details=when-authorized
management.metrics.export.prometheus.enabled=true

# ==========================================
# Logging Configuration
# ==========================================
logging.level.com.cashly=INFO
logging.level.org.springframework.security=DEBUG
logging.level.org.springframework.web=INFO
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE

# Log file configuration
logging.file.name=logs/cashly-api.log
logging.file.max-size=10MB
logging.file.max-history=30

# ==========================================
# Application Specific Configuration
# ==========================================

# Transaction categorization
cashly.categorization.auto-categorize=true
cashly.categorization.confidence-threshold=0.85

# Data refresh intervals (in milliseconds)
cashly.refresh.accounts-interval=3600000
cashly.refresh.transactions-interval=1800000

# Rate limiting
cashly.rate-limit.enabled=true
cashly.rate-limit.requests-per-minute=100

# Notification settings
cashly.notifications.email.enabled=false
cashly.notifications.webhook.enabled=false
cashly.notifications.webhook.url=https://your-webhook-url.com/cashly

# ==========================================
# Development/Testing Configuration
# ==========================================

# Profile-specific configurations
spring.profiles.active=development

